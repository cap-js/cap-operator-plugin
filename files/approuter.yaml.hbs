workloads:
    appRouter:
        name: app-router
        labels:
            sme.sap.com/app-type: {{appName}}
        consumedBTPServices:
        {{#hasXsuaa}}
        - {{appName}}-uaa-bind
        {{#isApp}}
        - {{appName}}-saas-registry-bind
        {{/isApp}}
        {{/hasXsuaa}}
        {{#hasIas}}
        - {{appName}}-identity-bind
        {{#isApp}}
        - {{appName}}-subscription-manager-bind
        {{/isApp}}
        {{/hasIas}}
        {{#isApp}}
        - {{appName}}-service-manager-bind
        {{/isApp}}
        {{#hasDestination}}
        - {{appName}}-destination-bind
        {{/hasDestination}}
        {{#hasHTML5Repo}}
        - {{appName}}-html5-repo-runtime-bind
        {{/hasHTML5Repo}}
        deploymentDefinition:
            type: Router
            image:
            ports:
            - name: router-port
              port: 5000
