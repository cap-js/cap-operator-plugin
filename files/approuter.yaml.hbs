workloads:
    app-router:
        name: app-router
        labels:
            sme.sap.com/app-type: {{appName}}
        consumedBTPServices:
        {{#hasXsuaa}}
        - {{appName}}-uaa-bind
        {{/hasXsuaa}}
        {{#hasDestination}}
        - {{appName}}-destination-bind
        {{/hasDestination}}
        {{#hasHTML5Repo}}
        - {{appName}}-html5-repo-runtime-bind
        {{/hasHTML5Repo}}
        {{#hasMultitenancy}}
        - {{appName}}-saas-registry-bind
        {{/hasMultitenancy}}
        deploymentDefinition:
            type: Router
            image:
            ports:
            - name: router-port
              port: 5000
