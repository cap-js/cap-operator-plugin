workloads:
    server:
        name: server
        labels:
            sme.sap.com/app-type: {{appName}}
        consumedBTPServices:
        {{#hasXsuaa}}
        - {{appName}}-uaa-bind
        {{/hasXsuaa}}
        {{#hasMultitenancy}}
        - {{appName}}-saas-registry-bind
        - {{appName}}-service-manager-bind
        {{/hasMultitenancy}}
        deploymentDefinition:
            {{#isApp}}
            type: CAP
            {{/isApp}}
            {{#isService}}
            type: service
            {{/isService}}
            image:

    contentDeploy:
        name: content-deploy
        labels:
            sme.sap.com/app-type: {{appName}}
        consumedBTPServices:
        {{#hasXsuaa}}
        - {{appName}}-uaa-bind
        {{/hasXsuaa}}
        {{#hasMultitenancy}}
        - {{appName}}-saas-registry-bind
        {{/hasMultitenancy}}
        {{#hasHtml5Repo}}
        - {{appName}}-html5-repo-host-bind
        {{/hasHtml5Repo}}
        jobDefinition:
            type: Content
            image:

    {{#isApp}}
    tenantJob:
        name: tenant-job
        labels:
            sme.sap.com/app-type: {{appName}}
        consumedBTPServices:
        {{#hasXsuaa}}
        - {{appName}}-uaa-bind
        {{/hasXsuaa}}
        {{#hasMultitenancy}}
        - {{appName}}-saas-registry-bind
        - {{appName}}-service-manager-bind
        {{/hasMultitenancy}}
        jobDefinition:
            type: TenantOperation
            image:
    {{/isApp}}
