            sme.sap.com/app-type: {{appName}}
        consumedBTPServices:
        {{#hasXsuaa}}
        - {{appName}}-uaa-bind
        {{/hasXsuaa}}
        {{#hasMultitenancy}}
        - {{appName}}-saas-registry-bind
        - {{appName}}-service-manager-bind
        {{/hasMultitenancy}}
        deploymentDefinition:
            env:
            - name: CDS_CONFIG
              value:
            type: CAP
            image:

    content-deploy:
        name: content-deploy
        labels:
            sme.sap.com/app-type: {{appName}}
